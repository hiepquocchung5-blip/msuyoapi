<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. Handle Authorization Header (Critical for JWT/Bearer tokens)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # 2. CORS (Cross-Origin Resource Sharing)
    # Allows your Frontend to talk to this Backend from a different domain
    # In strict production, replace "*" with your specific frontend domain (e.g., https://suropara.com)
    Header set Access-Control-Allow-Origin "https://m.suropara.com"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

    # 3. Handle Options pre-flight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]

    # 4. Clean URLs (Optional: removes .php extension requirements)
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteCond %{REQUEST_FILENAME}\.php -f
    # RewriteRule ^(.*)$ $1.php [L]
</IfModule>

# Security: Disable directory listing
Options -Indexes